<?xml version="1.0" encoding="utf-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.onlineceo.ugzipcodes"
        versionCode = "5"
        version     = "1.3.0" >

    <name>Uganda Zip Codes</name>

    <description>
        Find any Ugandan area Zip Code from this app with an easy search filter and fast copy zip code function
    </description>

    <author href="http://tricksgum.com" email="mkspeter3@gmail.com">
        OnlineCEO
    </author>

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />
    </platform>

    <icon src="www/icon.png" />


    <!-- My preferences -->
    <preference name="android-build-tool" value="gradle" />
    <preference name="phonegap-version" value="cli-9.0.0" />
    <preference name="Orientation" value="portrait" />
    <preference name="android-targetSdkVersion" value="29" />


    <!-- My plugins -->
    <gap:plugin name="cordova-plugin-x-toast" spec="2.7.2" source="npm" />
    <plugin name="cordova-plugin-x-socialsharing" spec="5.6.2" source="npm"/>
    <plugin name="cordova-plugin-whitelist" spec="1.3.3" source="npm"/>
    <plugin name="cordova-plugin-inappbrowser" spec="3.0.0" source="npm"/>
    <plugin name="cordova-plugin-admob-free" spec="0.20.0" source="npm"/>
    <plugin name="cordova-plugin-appversion" spec="1.0.0" source="npm"/>


</widget>