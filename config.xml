<?xml version='1.0' encoding='utf-8'?>
<widget id="com.onlineceo.ugzipcodes"
        version="1.5.0"
        versionCode="10"
        xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">

    <name>Uganda Zip Codes</name>

    <description>
        Find any Ugandan area Zip Code from this app with an easy search filter and fast copy zip code function
    </description>

    <author email="mkspeter3@gmail.com" href="http://tricksgum.com">
        OnlineCEO
    </author>

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="AndroidXEnabled" value="true" />
    </platform>

    <icon src="www/icon.png" />
    <preference name="android-build-tool" value="gradle" />
    <preference name="phonegap-version" value="cli-9.0.0" />
    <preference name="Orientation" value="portrait" />
    <preference name="android-targetSdkVersion" value="30" />

    <!-- My plugins -->
    <plugin name="cordova-plugin-x-toast" source="npm" spec="2.7.3" />
    <plugin name="cordova-plugin-x-socialsharing" source="npm" spec="6.0.3" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="5.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.5" source="npm"/>

</widget>
